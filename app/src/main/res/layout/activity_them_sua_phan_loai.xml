<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSuaPhanLoai"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarthemphanloai"
        app:title="Quản lý "
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />
    <EditText
        android:id="@+id/etMaThemSuaPL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >
    </EditText>
    <EditText
        android:id="@+id/etTenThemSuaPL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <Button
        android:id="@+id/btnThemPl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"></Button>
    <Button
        android:id="@+id/btnSuaPL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"></Button>
</LinearLayout>